<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cto3543.pingpong">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name=".PingPongApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.cto3543.pingpong.user.adduser.AddUserActivity"
            android:label="@string/title_activity_add_user"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.cto3543.pingpong.match.addmatch.AddMatchActivity"
            android:label="@string/title_activity_add_match"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SlpashActivity"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.cto3543.pingpong.match.seematch.SeeMatchActivity"
            android:label="@string/title_activity_see_match"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>